# ===========================================
# Peptide Optimization Service - Environment Variables
# ===========================================
# Copy this file to .env and modify as needed

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=8000

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=your_secure_password
DB_NAME=peptide_opt_db

# ===========================================
# SeaweedFS Storage Configuration
# ===========================================
SEAWEED_FILER_ENDPOINT=http://localhost:8888
SEAWEED_BUCKET=peptide-opt
SEAWEED_S3_ENDPOINT=http://localhost:8333
SEAWEED_ACCESS_KEY=
SEAWEED_SECRET_KEY=

# ===========================================
# Task Processor Configuration
# ===========================================
POLL_INTERVAL=30

# ===========================================
# Application Configuration
# ===========================================
LOG_LEVEL=INFO
TEMP_DIR=/tmp/peptide_opt

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=8000
